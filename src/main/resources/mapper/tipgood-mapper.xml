<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TipGood">

<resultMap type="TipGoodDTO" id="TipDTOResultMap">
<result property="tip_good_seq" column="tip_good_seq" jdbcType="INTEGER" javaType="java.lang.Integer"/>
<result property="tip_seq" column="tip_seq" jdbcType="INTEGER" javaType="java.lang.Integer"/>
<result property="user_seq" column="user_seq" jdbcType="INTEGER" javaType="java.lang.Integer"/>
</resultMap>

<!-- get tip like counts select -->
<select id="getTipLikeCounts" parameterType="TipGoodDTO" resultMap="TipDTOResultMap">
select max(tip_good_seq) from tip_good where TIP_SEQ=#{seq}
</select>

</mapper>